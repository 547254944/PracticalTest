@using PracticalTest.Models
@model IEnumerable<PracticalTest.Models.Stu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Search", "Student", FormMethod.Get))
{
    <div class="form-horizontal">
        <div class="form-inline">
            
                <label>Search By:</label>
                @Html.DropDownList("option", new SelectList(Enum.GetValues(typeof(Option))), "--Select--")
            
                @Html.TextBox("search")
            
                <input class="btn btn-primary btn-sm" type="submit" value="Search"/>
            
        </div>
    </div>
}
<br />

<table class="table">
    <tr>
        <th>
            S/N
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NRIC)
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            NO. Of Subjects
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.ActionLink(item.NRIC, "Edit", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>

        </tr>
    }

</table>
